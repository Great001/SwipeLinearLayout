<?xml version="1.0" encoding="utf-8"?>
<com.example.liaohaicongsx.swipelinearlayout.SwipeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="hello world"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_options"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="删除"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#ff0000"/>
</com.example.liaohaicongsx.swipelinearlayout.SwipeLinearLayout>